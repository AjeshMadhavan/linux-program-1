while true 
do
echo "1 creating file "
echo "2 display  file"
echo "3 copy file"
echo "4 move file"
echo "5 compare file"
echo "6 word count"
echo "7 split"
echo "8 difference"
echo "9 remove file"
echo "10 exit"
echo "enter the choice"
read choice
case $choice in
1) vi a1;;
2) ls;;
3) cp a1 a1;;
4) mv a2 a3;;
5) cmp a3 a4;;
6) wc a3;;
7) split -l 1 cc;;
8) diff a3 a4;;
9) rm a3;;
10) exit ;;
esac
done
